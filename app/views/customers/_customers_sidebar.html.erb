<% customer = @customer unless @customer.nil? %>

<% if params[:action].eql?("new") %>
  <%= sidebar_big_button("cancel", "customer", "Cancelar") %>
  


  <!--Customer#Show -->
<% elsif params[:action].eql?("show") %>
  <div id="total_income">
	<div class="title">
		Ventas
	</div>
	<table class="customer_sales">
		<tr>
			<th>Este año</th>
			<td class="this_year"><%= number_to_currency(customer.total_this_year, :unit => "$", :delimiter => ".", :precision => 0) %></td>
		</tr>
		<tr>
			<th>Histórico</th>
			<td class="last_year"><%= number_to_currency(customer.total_all_time, :unit => "$", :delimiter => ".", :precision => 0) %></td>
		</tr>
	</table>
  </div>
  
  
<div class="span-4 last">
      <ul class="toolbox secondary">
		<li id="edit_invoice"><%= link_to "<strong>Editar</strong> cliente", edit_customer_path(customer) %></li>
        <li id="add_link"><%= link_to "<strong>Agregar</strong> contacto", new_customer_contact_path(customer) %></li>
		<% if customer.invoices.size == 0 %>
		<li id="delete_invoice"><%= link_to "<strong>Borrar</strong> cliente", customer,
              :confirm => "Está seguro?", :method => :delete %></li>
        <% end %>

      </ul>

  </div>




<% elsif params[:action].eql?("edit") %>
  <%= sidebar_big_button("cancel", "customer", "Cancelar") %>
  
<% else %>
  <% if params[:error] %>
	<%= sidebar_big_button("cancel", "customer", "Cancelar") %>
  <% else %>
    <%= sidebar_big_button("submit", "customer", "Nuevo Cliente") %>
  <% end %>
<% end %>

