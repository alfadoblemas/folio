<h2>Agregar Empresa</h2>

<% form_for @customer do |f| %>

  <%= f.error_messages :class => "error" %>

  <%= render :partial => "customer_fields", :locals => {:customer => f} %>

  

  <% if params[:from_invoice].to_i == 1 %>
    <%= hidden_field_tag "referrer_invoice", 1 %>
  <% else %>
    <%= hidden_field_tag "referrer_invoice", 0 %>
  <% end %>
  <%= f.submit "Guardar" %>
  <%= link_to "Cancelar", customers_path %>

<% end %>