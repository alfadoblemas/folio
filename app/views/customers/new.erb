<h2>Agregar Cliente</h2>

<% form_for @customer do |f| %>

  <%= f.error_messages :class => "notice" %>

  <%= render :partial => "customer_fields", :locals => {:customer => f} %>

  <% f.fields_for :contacts do |contact| %>

    <h4>Agregar un Contacto a este Cliente</h4>

    <%= render :partial => "contacts/new_contact", :locals => {:contact => contact} %>

  <% end %>

  <% if request.referrer =~ /invoices/ || params[:referrer_invoice] %>
    <%= hidden_field_tag "referrer_invoice", true %>
  <% else %>
    <%= hidden_field_tag "referrer_invoice", false %>
  <% end %>
  <%= f.submit "Guardar" %>
  <%= link_to "Cancelar", customers_path %>

<% end %>