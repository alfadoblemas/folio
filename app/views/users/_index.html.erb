<table class="users draft">
	<tr>
		<th>Email</th>
		<th>Nombre</th>
		<th>Administrador?</th>
		<th>Acciones</th>
	</tr>
	
	<% users.each do |user| %>
		<tr class="user">
			<td><%= h user.email %></td>
			<td><%= h user.name.titleize %></td>
			<td align="center"><%= user.account_admin? ? '<img src="/images/icons/star_16.png"/>' : "" %></td>
			<td>
				<% if current_user.admin? %>
				<%= link_to "Editar", edit_user_path(user)%>
				
				<% unless user.account_admin? %>
				  |
					<% if user.active? %>
				  		<%= link_to "Desactivar", disable_user_path(user), :confirm => "Está seguro?" %></td>
					<% else %>
				  		<%= link_to "Activar", enable_user_path(user), :confirm => "Está seguro?" %></td>
					<% end %>
				<% end %>
				<% end %>
		</tr>
	<% end %>
	
</table>