<% form_tag :action => "create", :controller => "comments" do %>

  <%= text_area_tag :body, "", :cols => 90, :rows => 4 %>
  <%= hidden_field_tag :invoice_id,"", :value => invoice_id %>
  <%= hidden_field_tag :user_id,"", :value => current_user.id %>
  <br/>
  <%= submit_tag "Guardar" %>
  <%= link_to "Cancelar", invoice_path(invoice_id) %>
<% end %>
