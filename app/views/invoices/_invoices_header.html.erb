<tr>
  <th class="qtyHeader"><%= sortable "number", "Número"%></th>
  <th class="unitHeader"><%= sortable "date", "Fecha" %></th>
  <th class="descriptionHeader">Cliente</th>
  <th class="titleHeader">Título</th>
  <% if state == "due" %>
    <th class="priceHeader"><%= sortable "due", "Atrasada" %></th>
  <% elsif state == "close" %>
    <th class="priceHeader">Pagada</th>
  <% else %>
    <th class="priceHeader"><%= sortable "due", "Vence" %></th>
  <% end %>
  <th class="totalHeader">Total</th>
</tr>