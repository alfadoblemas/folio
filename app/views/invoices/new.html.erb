<h3>Nueva Factura</h3>

<% form_for @invoice do |f| %>
  <%= f.error_messages :class => "notice" %>

  <%= render :partial => "invoice_fields", :locals => {:invoice => f} %>

  <% f.fields_for :invoice_items do |builder| %>

    <table id="newInvoiceItems">
      <tr>
        <th></th>
        <th>Unidad</th>
        <th>Cantidad</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Total</th>
      </tr>
      <%= render :partial => "invoice_item_fields", :locals => {:f => builder} %>

    </table>

<hr/>

    <div>
      <span class="addLink"><%= link_to_add_fields "Agregar línea", f, :invoice_items %></span>
    </div>

<div class="prepend-15 last">
  <table>
    <tr>
      <td>Neto</td>
      <td>$0.0</td>
    </tr>
    <tr>
      <td>Total</td>
      <td>$0.0</td>
    </tr>
  </table>
</div>

    <br/>

  <% end %>

  <%= f.submit "Guardar" %>
  <%= link_to "Cancelar", customers_path %>

<% end %>