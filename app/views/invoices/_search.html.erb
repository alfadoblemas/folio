<fieldset>
<!-- Busqueda directa x Numero de Factura -->
<% form_for @search, :url => {:action => "search" } do |f| -%>
  <table class="search">
	  <tr>
	  	<td><%= f.label :customer_name_like, "Cliente" %></td>
	  	<td><%= f.text_field :customer_name_like %></td>
	  </tr>
  	  <tr>
		<td></td>
		<td>
			<%= f.check_box(:taxed, :checked => true)%><%= f.label "Afecta" %>
		</td>
	  </tr>
	  <tr>
	  	<td><%= f.label :date_gte, "Desde" %></td>
	  	<td><%= f.date_select :date_gte, :default => { :day => 1} %></td>
	  </tr>
	  <tr>
	  	<td><%= f.label :date_lte, "Hasta"%></td>
	  	<td><%= f.date_select :date_lte, :default => {:month => Date.today.month + 1, :day => 30 } %></td>
	  </tr>
  </table>
  <%= f.submit "Buscar" %>
<% end -%>
</fieldset>
