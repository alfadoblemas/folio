<div id="invoiceFields">
<fieldset>
  <div class="span-18 last">
    <table>
      <tbody>
        <tr>
          <td><span class="required"><%= invoice.label "Cliente" %></span></td>
          <td>: <%= text_field_tag "", @customer.name, :size => 30 %> 
	  <% if @customer.id.nil? %>
	  - o - <%= link_to "Agregar cliente", new_customer_path %>
	  <% end %>
	  </td>
        </tr>
        <tr>
          <td><span class="required"><%= labelUp_tag "R.U.T." %></span></td>
          <td>: <%= text_field_tag "", @customer.rut %> </td>
        </tr>
        <tr>
          <td><span class="required"><%= invoice.label "Fecha" %></span></td>
          <td class="date">: <%= invoice.date_select :date , :order => [:day, :month, :year] %></td>
        </tr>
        <tr>
          <td><span class="required"><%= invoice.label "NÃºmero" %></span></td>
          <td>: <%= invoice.text_field :number %></td>
        </tr>
        <tr>
          <td><span class="required"><%= labelUp_tag "I.V.A." %></span></td>
          <td>: <%= invoice.check_box :taxed, :onclick => "enableIVA()" %></td>
        </tr>
      </tbody>
    </table>
    <%= invoice.hidden_field :customer_id, :value => @customer.id  %>
  </div>
</fieldset>
</div>
