<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
  "http://www.w3.org/TR/html4/loose.dtd">

<html>                                                                                                             
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title><%= "Folio: #{current_account.name}" %></title>
	
    <!-- Framework CSS -->
    <%= stylesheet_link_tag "blueprint/screen.css", :media => "screen, projection" %>
    <%= stylesheet_link_tag "blueprint/print.css", :media => "print" %>
    <!-- End Framework CSS -->

    <!-- Stylesheet -->
    <%= stylesheet_link_tag "jquery.autocomplete.css", :media => "all" %>
	<%= stylesheet_link_tag "jquery-ui-1.8.9.custom" %>
	<%= stylesheet_link_tag "jquery.tagit" %>
	<%= stylesheet_link_tag "factura", :media => "all" %>
	<link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css">

    <%= javascript_include_tag "jquery" %>
	<%= javascript_include_tag "jquery-ui.min" %>
	<%= javascript_include_tag "tag-it"%>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery.formatCurrency-1.4.0.min" %>
    <%= javascript_include_tag "jquery.formatCurrency.es-CL" %>
    <%= javascript_include_tag "i18n/jquery.ui.datepicker-es.js" %>
    <%= javascript_include_tag "jquery.tools.min" %>
    <%= javascript_include_tag "jquery.autocomplete.min" %>
    <%= javascript_include_tag "jquery.Rut.min" %>
    <%= javascript_include_tag "pagination.js "%>
    <%= javascript_include_tag "jquery.pageless"%>
    <%= javascript_include_tag "highcharts"%>
	<%= javascript_include_tag "resources/invoices"%>


  </head>
  <body>

    <div id="header">
      <%= render "shared/header" %>
    </div>

    <div class="container">

      <div id="main" class="span-18">
        <% if flash[:notice] -%>
          <div id="notice" class="notice"><%= flash[:notice] %></div>
        <% end %>
        <%= yield :layout %>
      </div>

	 <% unless @no_sidebar %>
      	<div id="sidebar" class="span-4 last">
        	<%= render "#{params[:controller]}_sidebar" %>
      	</div>
	 <% else %>
		<div class="span-4 last"></div>
	 <% end %>
    </div>
  </body>
</html>

