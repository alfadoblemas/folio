<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
  "http://www.w3.org/TR/html4/loose.dtd">

<html>                                                                                                             
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>Facturas</title>

    <!-- Framework CSS -->
    <%= stylesheet_link_tag "blueprint/screen.css", :media => "screen, projection" %>
    <%= stylesheet_link_tag "blueprint/print.css", :media => "print" %>
    <!-- End Framework CSS -->

    <!-- Stylesheet -->
    <%= stylesheet_link_tag "factura", :media => "all" %>
    <%= stylesheet_link_tag "jquery.autocomplete.css", :media => "all" %>

    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "jquery.formatCurrency-1.4.0.min" %>
    <%= javascript_include_tag "jquery.formatCurrency.es-CL" %>
    <%= javascript_include_tag "jquery-ui" %>
    <%= javascript_include_tag "jquery.tools.min" %>
    <%= javascript_include_tag "jquery.autocomplete.min" %>
    <%= javascript_include_tag "jquery.Rut.min" %>

  </head>
  <body>
    <div id="header">
      <%= render "shared/header" %>
    </div>

    <div class="container">

      <div id="main" class="span-19">
        <% if flash[:notice] -%>
          <div id="notice" class="notice"><%= flash[:notice] %></div>
        <% end %>
        <%= yield :layout %>
      </div>

      <div id="sidebar" class="span-4 last">
        <%= render "#{params[:controller]}_sidebar" %>
      </div>

    </div>

    <div id="footer">
      <hr/>
    </div>

  </body>
</html>

