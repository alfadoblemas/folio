<% if flash[:notice] -%>
  <div id="notice" class="notice"><%= flash[:notice] %></div>
<% end %>
<div id="login">
	
	<% if current_account.have_logo? %>
		<%= image_tag current_account.logo_url, :title => current_account.name, :class => "logo" %>
	<% else %>
		<h1><%= current_account.name %></h1>
	<% end %>
	<br/>
	<div id="login_dialog" class="login_dialog">
		<p>
			<strong>¿No puedes ingresar, olvidaste la contraseña?</strong>
			<br/>
			Ingresa tu dirección de email y te enviaremos las instrucciones para
			actualizar la contraseña.
		</p>
		<% form_tag(:action => "create") do %>	  
			<h2><%= label_tag "Ingresa tu dirección de e-mail" %></h2>
			<%= text_field_tag :email %>
			<br>
			<%= submit_tag "Enviar instrucciones", :class => "button" %>
		<div class="extras">
			No importa, <%= link_to "Volver a intentar", login_url %>
	 </div>
	<% end %>
</div>
<script type="text/javascript">
	//<![CDATA[
		$("#email").focus()
	//]]>
</script>